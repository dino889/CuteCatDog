<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cutecatdog.mapper.BoardMapper">
	
	<select id="selectBoard" resultType="BoardResponsDto">
    SELECT *
    FROM tbl_board
    
	</select>

  <select id="selectTypeBoard" resultType="BoardDto" parameterType="int">
    SELECT *
    FROM tbl_board
    WHERE type_id = #{typeId}
	</select>

  <insert id="insertBoard" parameterType="BoardAddRequestDto">
    INSERT INTO tbl_board (user_id,title,content,author,type_id) VALUES(#{userId},#{title},#{content},#{author},#{typeId})
  </insert>

  <update id="updateBoard" parameterType="BoardModifyRequestDto">
    UPDATE tbl_board
    SET title = #{title} , content = #{content}  , type_id = #{typeId}
    WHERE id = #{id}
  </update>

  <delete id="deleteBoard" parameterType="int">
    DELETE
    FROM tbl_board
    WHERE id = #{id}
  </delete>

	<select id="selectComment" parameterType="int" resultType="commentDto">
    SELECT id,parent,comment,dept,seq
    FROM tbl_comment
    WHERE board_id = #{id}
    ORDER BY IF(ISNULL(parent), id, parent), seq
	</select>

  <select id="selectDetailBoard" parameterType="int" resultType="BoardDetailDto">
    SELECT  title,content,author
    FROM tbl_board
    WHERE id = #{id}
  </select>
</mapper>