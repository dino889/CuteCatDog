<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cutecatdog.mapper.BoardMapper">
	
	<select id="selectBoard" resultType="BoardDto">
    SELECT *
    FROM tbl_board
	</select>

  <insert id="insertBoard" parameterType="BoardAddRequestDto">
    INSERT INTO tbl_board (user_id,title,content,author) VALUES(#{userId},#{title},#{content},#{author})
  </insert>

  <update id="updateBoard" parameterType="BoardModifyRequestDto">
    UPDATE tbl_board
    SET title = #{title} , content = #{content} 
    WHERE id = #{id}
  </update>

  <delete id="deleteBoard" parameterType="int">
    DELETE
    FROM tbl_board
    WHERE id = #{id}
  </delete>
</mapper>