<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cutecatdog.mapper.LikeMapper">
	
  <insert id="insertLikePlus">
    INSERT INTO tbl_like (isLiked) VALUES(1)
  </insert>

  <insert id="insertLike" parameterType="LikeRequestDto">
    INSERT INTO tbl_like_management (board_id,user_id) VALUES(#{boardId},#{userId})
  </insert>

  <delete id="deleteLike" parameterType="int">
    DELETE
    FROM tbl_like
    WHERE id = #{id}
  </delete>

</mapper>